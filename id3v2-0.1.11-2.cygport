DESCRIPTION="ID3v2 tag editor"
HOMEPAGE="http://id3v2.sourceforge.net/"
SRC_URI="mirror://sourceforge/${PN}/${P}.tar.gz"
PATCH_URI="mirror://portage/media-sound/${PN}/files/${P}-alpha.patch
           mirror://portage/media-sound/${PN}/files/${P}-makefile.patch"

src_compile() {
	lndirs
	cd ${B}
